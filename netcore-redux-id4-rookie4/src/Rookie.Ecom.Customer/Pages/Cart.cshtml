@page
@model Rookie.Ecom.Customer.Pages.CartModel
@{
}

<div class="container m-4 shadow-lg">
    <div class="row">
        <div class="col-sm-8 bg-white p-4">
            <div class="pl-5 pr-5">
                <div class="navbar p-0 mb-3 mt-1">
                    <span class="h4">Shopping cart</span>
                    <span class="h5">3 Items</span>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <td class="text-black-50 h6" style="font-size:14px">PRODUCT DETAILS</td>
                            <td class="text-black-50 h6" style="font-size:14px">QUANTITY</td>
                            <td class="text-black-50 h6" style="font-size:14px">PRICE</td>
                            <td class="text-black-50 h6" style="font-size:14px">TOTAL</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            Product image
                                        </div>
                                        <div class="col-sm">
                                            <div class="h6">
                                                Product name
                                            </div>
                                            <div class="mt-1 text-black-50" style="font-size:14px;">
                                                Tag
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="navbar p-0">
                                    <button class="btn" onclick="onChangeQuantity('0')">-</button>
                                    <input class="text-center" type="text" id="quantity" value="1" style="width:30px"/>
                                    <button class="btn" onclick="onChangeQuantity('1')">+</button>
                                </div>
                            </td>
                            <td>$123</td>
                            <td>$123</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
        </div>
        <div class="col-sm bg-dark p-4">
            <div class="mt-1 border-bottom pb-4">
                <span class="h5 text-white">Order Summary</span>
            </div>
            
            <div class="navbar p-0 mt-2 pt-1 mb-4">
                <div>
                    <span class="text-white h6 mr-1" style="font-size:14px">ITEMS</span>
                    <span class="text-white" style="font-size:14px">1</span>
                </div>
                <div>
                    <span class="text-white h6 mr-1" style="font-size:14px">$123</span>
                </div>
            </div>
            <span class="text-white h6">SHIPPING</span>
            <select class="custom-select mt-3 mb-4">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
            <span class="text-white h6">PROMO CODE</span>
            <div class="mt-3">
                <input class="rounded form-control" placeholder="Enter your code" type="text" style="width:100%; height:37px"/>
            </div>
            <div class="mt-4 border-bottom pb-4">
                <button class="btn btn-success">APPLY</button>
            </div>
            <div class="navbar p-0 mt-2 pt-1 mb-4">
                <div>
                    <span class="text-white h6 mr-1" style="font-size:14px">TOTAL COST</span>
                </div>
                <div>
                    <span class="text-white h6 mr-1" style="font-size:14px">$123</span>
                </div>
            </div>
            <button class="btn btn-primary w-100">CHECK OUT</button>
        </div>
    </div>
</div>
<script>
    function onChangeQuantity(choice) {
        var num = parseInt(document.getElementById("quantity").value.toString());
        if (choice === "0") {
            if (num !== 1) {
                document.getElementById("quantity").value = (num - 1).toString();
            }
        } else {
            document.getElementById("quantity").value = (num + 1).toString();
        }
    }
</script>